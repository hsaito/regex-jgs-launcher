{
  "name": "regex-jgs-launcher",
  "publisher": "hideki",
  "author": "Hideki Saito",
  "displayName": "%displayName%",
  "description": "%description%",
  "l10n": "./l10n",
  "keywords": [
    "regex",
    "regexbuddy",
    "regexmagic",
    "jgsoft",
    "launcher",
    "external tools"
  ],
  "homepage": "https://github.com/hsaito/regex-jgs-launcher#readme",
  "bugs": {
    "url": "https://github.com/hsaito/regex-jgs-launcher/issues"
  },
  "icon": "logo.png",
  "version": "0.2.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hsaito/regex-jgs-launcher.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "regex-jgs-launcher.launchRegexBuddy",
        "title": "%command.launchRegexBuddy%",
        "category": "%category.jgsRegexLauncher%",
        "enablement": "config.regex-jgs-launcher.regexBuddy.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexBuddySample",
        "title": "%command.launchRegexBuddySample%",
        "category": "%category.jgsRegexLauncher%",
        "enablement": "config.regex-jgs-launcher.regexBuddy.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexMagic",
        "title": "%command.launchRegexMagic%",
        "category": "%category.jgsRegexLauncher%",
        "enablement": "config.regex-jgs-launcher.regexMagic.enabled"
      },
      {
        "command": "regex-jgs-launcher.showSetup",
        "title": "%command.showSetup%",
        "category": "%category.jgsRegexLauncher%"
      },
      {
        "command": "regex-jgs-launcher.resetAllSettings",
        "title": "%command.resetAllSettings%",
        "category": "%category.jgsRegexLauncher%"
      },
      {
        "command": "regex-jgs-launcher.showResetGuide",
        "title": "%command.showResetGuide%",
        "category": "%category.jgsRegexLauncher%"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "regex-jgs-launcher.onboarding.showOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "%config.onboarding.showOnStartup%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexBuddy.enabled": {
          "type": "boolean",
          "default": false,
          "description": "%config.regexBuddy.enabled%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexBuddy.path": {
          "type": "string",
          "default": "C:\\Program Files\\Just Great Software\\RegexBuddy 4\\RegexBuddy4.exe",
          "description": "%config.regexBuddy.path%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexBuddy.args": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "markdownDescription": "%config.regexBuddy.args%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexBuddy.preArgs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["-getfromclipboard", "-putonclipboard"],
          "markdownDescription": "%config.regexBuddy.preArgs%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexBuddy.sample.args": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "markdownDescription": "%config.regexBuddy.sample.args%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexBuddy.sample.preArgs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["-testclipboard", "-putonclipboard"],
          "markdownDescription": "%config.regexBuddy.sample.preArgs%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexMagic.enabled": {
          "type": "boolean",
          "default": false,
          "description": "%config.regexMagic.enabled%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexMagic.path": {
          "type": "string",
          "default": "C:\\Program Files\\Just Great Software\\RegexMagic 2\\RegexMagic2.exe",
          "description": "%config.regexMagic.path%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexMagic.args": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "markdownDescription": "%config.regexMagic.args%",
          "scope": "application"
        },
        "regex-jgs-launcher.regexMagic.preArgs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["-sampleclipboard", "-putonclipboard"],
          "markdownDescription": "%config.regexMagic.preArgs%",
          "scope": "application"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "regex-jgs-launcher.launchRegexBuddy",
          "when": "editorHasSelection && config.regex-jgs-launcher.regexBuddy.enabled",
          "group": "navigation@99"
        },
        {
          "command": "regex-jgs-launcher.launchRegexBuddySample",
          "when": "editorHasSelection && config.regex-jgs-launcher.regexBuddy.enabled",
          "group": "navigation@99"
        },
        {
          "command": "regex-jgs-launcher.launchRegexMagic",
          "when": "editorHasSelection && config.regex-jgs-launcher.regexMagic.enabled",
          "group": "navigation@100"
        }
      ]
    },
    "keybindings": [
      {
        "command": "regex-jgs-launcher.launchRegexBuddy",
        "key": "ctrl+alt+shift+r",
        "when": "editorFocus && config.regex-jgs-launcher.regexBuddy.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexBuddy",
        "key": "ctrl+alt+shift+r",
        "when": "findWidgetVisible && config.regex-jgs-launcher.regexBuddy.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexBuddySample",
        "key": "ctrl+alt+shift+s",
        "when": "editorFocus && config.regex-jgs-launcher.regexBuddy.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexBuddySample",
        "key": "ctrl+alt+shift+s",
        "when": "findWidgetVisible && config.regex-jgs-launcher.regexBuddy.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexMagic",
        "key": "ctrl+alt+shift+m",
        "when": "editorFocus && config.regex-jgs-launcher.regexMagic.enabled"
      },
      {
        "command": "regex-jgs-launcher.launchRegexMagic",
        "key": "ctrl+alt+shift+m",
        "when": "findWidgetVisible && config.regex-jgs-launcher.regexMagic.enabled"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
